{
    "version": "2.0.0",
    "tasks": [
        // TX Tasks
        {
            "label": "TX: Build",
            "type": "shell",
            "command": "pio run -e tx",
            "group": "build",
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "TX: Upload",
            "type": "shell",
            "command": "pio run -e tx -t upload --upload-port /dev/cu.usbmodem101",
            "group": "build",
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "TX: Monitor",
            "type": "shell",
            "command": "pio device monitor -b 115200 --port /dev/cu.usbmodem101",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            }
        },
        {
            "label": "TX: Build + Upload + Monitor",
            "dependsOrder": "sequence",
            "dependsOn": [
                "TX: Build",
                "TX: Upload",
                "TX: Monitor"
            ],
            "problemMatcher": []
        },
        
        // RX Tasks
        {
            "label": "RX: Build",
            "type": "shell",
            "command": "pio run -e rx",
            "group": "build",
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "RX: Upload",
            "type": "shell",
            "command": "pio run -e rx -t upload --upload-port /dev/cu.usbmodem2101",
            "group": "build",
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "RX: Monitor",
            "type": "shell",
            "command": "pio device monitor -b 115200 --port /dev/cu.usbmodem2101",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            }
        },
        {
            "label": "RX: Build + Upload + Monitor",
            "dependsOrder": "sequence",
            "dependsOn": [
                "RX: Build",
                "RX: Upload",
                "RX: Monitor"
            ],
            "problemMatcher": []
        },

        // Both devices
        {
            "label": "Build Both (TX + RX)",
            "type": "shell",
            "command": "pio run -e tx -e rx",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm -rf .pio/build && pio run -e tx -e rx",
            "group": "build",
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
